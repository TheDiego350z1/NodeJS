<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-6">
                <a href="/agenda/crear"> <button class="btn btn-primary ">Crear Contacto</button></a>
            </div>
            <div class="col-6 d-flex justify-content-center">
                <a href="/agenda/crear"> <button class="btn btn-primary ">Crear Contacto</button></a>
            </div>
        </div>

        <table class="table table-light">
            <thead class="thead-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Telefono</th>
                    <th>-</th>
                    <th>-</th>
                </tr>
            </thead>
            <tbody>
                <% contactos.forEach(element => { %>
                    <tr>
                        <td scope="row"> <%=element.nombre %></td>
                        <td><%=element.pellido %></td>
                        <td><%=element.correo %></td>
                        <td><%=element.tel %></td>
                        <td>Borrar</td>
                        <td>Editar</td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/jsBootstrap.ejs') %>

</body>

</html>